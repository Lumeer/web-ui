{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "lumeer": {
      "i18n": {
        "sourceLocale": "en",
        "locales": {
          "cs": "src/i18n/messages.cs.xlf",
          "hu": "src/i18n/messages.hu.xlf"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "",
      "schematics": {
        "@schematics/angular:component": {
          "changeDetection": "OnPush",
          "skipTests": true,
          "style": "scss"
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "aot": true,
            "optimization": false,
            "sourceMap": false,
            "outputPath": "dist/lumeer",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/browserconfig.xml",
              "src/manifest.json",
              "src/public-view.js"
            ],
            "i18nMissingTranslation": "error",
            "styles": [
              "node_modules/ngx-toastr/toastr.css",
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "node_modules/ngx-bootstrap/datepicker/bs-datepicker.css",
              "node_modules/@lumeer/lumeer-gantt/dist/lumeer-gantt.css",
              "node_modules/driver.js/dist/driver.min.css",
              "node_modules/@angular/cdk/overlay-prebuilt.css",
              "node_modules/@angular/material/prebuilt-themes/deeppurple-amber.css",
              "node_modules/quill/dist/quill.core.css",
              "node_modules/quill/dist/quill.bubble.css",
              "node_modules/quill/dist/quill.snow.css",
              "src/styles.scss"
            ],
            "allowedCommonJsDependencies": [
              "lodash",
              "js-cookie",
              "plotly.js",
              "big.js",
              "file-saver",
              "moment-timezone",
              "coordinate-parser",
              "util"
            ],
            "scripts": [
              "node_modules/hammerjs/hammer.min.js",
              "node_modules/pusher-js/dist/web/pusher.min.js",
              "node_modules/quill/dist/quill.js",
              "node_modules/numbro/dist/languages.min.js"
            ],
            "vendorChunk": false
          },
          "configurations": {
            "production": {
              "aot": true,
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "buildOptimizer": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "namedChunks": true,
              "optimization": true,
              "outputHashing": "all",
              "showCircularDependencies": false,
              "sourceMap": true,
              "vendorChunk": false
            },
            "public": {
              "aot": true,
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "buildOptimizer": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.public.ts"
                }
              ],
              "namedChunks": true,
              "optimization": true,
              "outputHashing": "all",
              "showCircularDependencies": false,
              "sourceMap": true,
              "vendorChunk": false
            },
            "staging": {
              "aot": true,
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "buildOptimizer": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "namedChunks": true,
              "optimization": true,
              "outputHashing": "all",
              "showCircularDependencies": false,
              "sourceMap": true,
              "vendorChunk": false
            },
            "testing": {
              "aot": true,
              "budgets": [
                {
                  "type": "initial",
                  "baseline": "6mb",
                  "maximumWarning": "10%",
                  "maximumError": "25%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-detail",
                  "baseline": "71kb",
                  "maximumWarning": "10%",
                  "maximumError": "50%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-chart",
                  "baseline": "2800kb",
                  "maximumWarning": "10%",
                  "maximumError": "25%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-map",
                  "baseline": "174kb",
                  "maximumWarning": "10%",
                  "maximumError": "50%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-search",
                  "baseline": "87kb",
                  "maximumWarning": "10%",
                  "maximumError": "50%"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "buildOptimizer": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.testing.ts"
                }
              ],
              "namedChunks": true,
              "optimization": true,
              "outputHashing": "all",
              "showCircularDependencies": true,
              "sourceMap": true,
              "vendorChunk": false
            },
            "local": {
              "progress": true,
              "baseHref": "/ui/"
            },
            "cs": {
              "aot": true,
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "baseHref": "/ui/",
              "buildOptimizer": false,
              "localize": ["cs"],
              "optimization": false,
              "sourceMap": true
            },
            "hu": {
              "aot": true,
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "baseHref": "/ui/",
              "buildOptimizer": false,
              "localize": ["hu"],
              "optimization": false,
              "sourceMap": true
            },
            "en": {
              "aot": true,
              "baseHref": "/ui/",
              "buildOptimizer": false,
              "localize": ["en"],
              "optimization": false,
              "sourceMap": true,
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "lumeer:build:local",
            "port": 7000
          },
          "configurations": {
            "cs": {
              "browserTarget": "lumeer:build:cs"
            },
            "hu": {
              "browserTarget": "lumeer:build:hu"
            },
            "en": {
              "browserTarget": "lumeer:build:en"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "lumeer:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "styles": [
              "./node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/ngx-bootstrap/datepicker/bs-datepicker.css",
              "src/styles.scss"
            ],
            "scripts": [],
            "assets": ["src/favicon.ico", "src/assets", "src/public-view.js"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    }
  },
  "defaultProject": "lumeer"
}
