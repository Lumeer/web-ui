{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "lumeer": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "",
      "schematics": {
        "@schematics/angular:component": {
          "changeDetection": "OnPush",
          "spec": false,
          "styleext": "scss"
        },
        "@schematics/angular:guard": {
          "spec": false
        },
        "@schematics/angular:module": {
          "spec": false
        },
        "@schematics/angular:pipe": {
          "spec": false
        },
        "@schematics/angular:service": {
          "spec": false
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/lumeer",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "assets": ["src/favicon.ico", "src/assets", "src/browserconfig.xml", "src/manifest.json"],
            "styles": [
              "./node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/ngx-bootstrap/datepicker/bs-datepicker.css",
              "src/styles.scss"
            ],
            "scripts": [
              "node_modules/hammerjs/hammer.min.js",
              "node_modules/muuri/dist/muuri.min.js",
              "node_modules/pusher-js/dist/web/pusher.min.js"
            ],
            "vendorChunk": false
          },
          "configurations": {
            "production": {
              "aot": true,
              "budgets": [
                {
                  "type": "initial",
                  "baseline": "3215kb",
                  "maximumWarning": "10%",
                  "maximumError": "25%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-detail",
                  "baseline": "71kb",
                  "maximumWarning": "10%",
                  "maximumError": "50%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-chart",
                  "baseline": "2800kb",
                  "maximumWarning": "10%",
                  "maximumError": "25%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-map",
                  "baseline": "174kb",
                  "maximumWarning": "10%",
                  "maximumError": "50%"
                },
                {
                  "type": "bundle",
                  "name": "perspectives-search",
                  "baseline": "87kb",
                  "maximumWarning": "10%",
                  "maximumError": "50%"
                }
              ],
              "buildOptimizer": true,
              "extractCss": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "namedChunks": true,
              "optimization": true,
              "outputHashing": "all",
              "showCircularDependencies": false,
              "sourceMap": true,
              "vendorChunk": false
            },
            "staging": {
              "aot": true,
              "buildOptimizer": true,
              "extractCss": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "namedChunks": true,
              "optimization": true,
              "outputHashing": "all",
              "showCircularDependencies": false,
              "sourceMap": true,
              "vendorChunk": false
            },
            "cs": {
              "aot": true,
              "i18nFile": "src/i18n/messages.cs.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "cs",
              "buildOptimizer": false,
              "optimization": false,
              "sourceMap": false
            },
            "en": {
              "aot": true,
              "i18nFile": "src/i18n/messages.en.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "en",
              "buildOptimizer": false,
              "optimization": false,
              "sourceMap": false
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "baseHref": "/ui/",
            "browserTarget": "lumeer:build",
            "port": 7000,
            "progress": true
          },
          "configurations": {
            "cs": {
              "browserTarget": "lumeer:build:cs"
            },
            "en": {
              "browserTarget": "lumeer:build:en"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "lumeer:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "styles": [
              "./node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/ngx-bootstrap/datepicker/bs-datepicker.css",
              "src/styles.scss"
            ],
            "scripts": [],
            "assets": ["src/favicon.ico", "src/assets"]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tslintConfig": "tslint.json",
            "tsConfig": ["src/tsconfig.app.json", "src/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "lumeer"
}
