    "@angular-devkit/schematics": "^12.2.10",
    "@angular-eslint/builder": "12.5.0",
    "@angular-eslint/eslint-plugin": "12.5.0",
    "@angular-eslint/eslint-plugin-template": "12.5.0",
    "@angular-eslint/schematics": "12.5.0",
    "@angular-eslint/template-parser": "12.5.0",
    "@angular/cli": "^12.2.10",
    "@angular/compiler-cli": "^12.2.10",
    "@angular/language-service": "^12.2.10",
    "@compodoc/compodoc": "^1.1.15",
    "@ngrx/schematics": "^12.4.0",
    "@sentry/cli": "^1.69.1",
    "@types/auth0-js": "^9.14.5",
    "@types/big.js": "^6.1.2",
    "@types/d3-drag": "^2.0.0",
    "@types/d3-selection": "^2.0.0",
    "@types/d3-zoom": "^2.0.0",
    "@types/geojson": "^7946.0.8",
    "@types/jasmine": "~3.9.1",
    "@types/jasminewd2": "~2.0.10",
    "@types/js-base64": "^3.3.1",
    "@types/jssha": "^3.0.0",
    "@types/mapbox-gl": "^2.4.2",
    "@types/node": "^16.10.9",
    "@types/plotly.js": "^1.54.3",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "angular-http-server": "^1.10.0",
    "assert": "^2.0.0",
    "bundlesize": "^0.18.1",
    "codelyzer": "^6.0.2",
    "cypress": "^8.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsdoc": "36.1.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-rxjs": "^3.3.7",
    "husky": "^4.3.8",
    "jasmine": "~3.10.0",
    "jasmine-core": "~3.10.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "lint-staged": "^11.1.2",
    "listr": "^0.14.3",
    "prettier": "^2.4.1",
    "ts-node": "~10.3.0",
    "typescript": "~4.3.5"
  },
  "bundlesize": [
    {
      "path": "./dist/lumeer/main*.js",
      "maxSize": "3500kb"
    },
    {
      "path": "./dist/lumeer/default-src_app_view_perspectives_chart*.js",
      "maxSize": "1379kb"
    },
    {
      "path": "./dist/lumeer/default-src_app_view_perspectives_detail*.js",
      "maxSize": "121kb"
    },
    {
      "path": "./dist/lumeer/default-src_app_view_perspectives_map*.js",
      "maxSize": "1179kb"
    },
    {
      "path": "./dist/lumeer/src_app_view_perspectives_search*.js",
      "maxSize": "157kb"
    },
    {
      "path": "./dist/lumeer/polyfills*.js",
      "maxSize": "213kb"
    },
    {
      "path": "./dist/lumeer/runtime*.js",
      "maxSize": "12kb"
    },
    {
      "path": "./dist/lumeer/scripts*.js",
      "maxSize": "192kb"
    },
    {
      "path": "./dist/lumeer/styles*css",
      "maxSize": "350kb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,scss,md}": [
      "npm run format:fix"
    ],
    "**/!(*.spec).ts": [
      "eslint --fix"
    ]
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  }
}
