    "tslib": "^2.0.3",
    "unorm": "^1.6.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.0",
    "@angular-devkit/schematics": "^10.2.0",
    "@angular/cli": "^11.0.2",
    "@angular/compiler-cli": "^10.2.3",
    "@angular/language-service": "^10.2.3",
    "@compodoc/compodoc": "^1.1.11",
    "@ngrx/schematics": "^10.0.1",
    "@sentry/cli": "^1.59.0",
    "@types/auth0-js": "^9.14.2",
    "@types/big.js": "^6.0.0",
    "@types/geojson": "^7946.0.7",
    "@types/jasmine": "^3.6.1",
    "@types/jasminewd2": "~2.0.8",
    "@types/js-base64": "^3.0.0",
    "@types/jssha": "^2.0.0",
    "@types/mapbox-gl": "^1.12.5",
    "@types/node": "^14.14.7",
    "@types/d3-zoom": "^1.7.4",
    "@types/d3-drag": "^1.2.3",
    "@types/plotly.js": "^1.54.2",
    "angular-http-server": "^1.9.0",
    "bundlesize": "^0.18.0",
    "codelyzer": "^6.0.1",
    "cypress": "^5.6.0",
    "husky": "^4.3.0",
    "jasmine": "~3.6.3",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~6.0.0",
    "karma": "~5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "lint-staged": "^10.5.1",
    "listr": "^0.14.3",
    "ngx-i18nsupport": "^0.17.1",
    "prettier": "~2.1.2",
    "rxjs-tslint-rules": "^4.34.5",
    "ts-node": "~9.0.0",
    "tslint": "~6.1.3",
    "typescript": "~4.0.5"
  },
  "bundlesize": [
    {
      "path": "./dist/lumeer/default*.js",
      "maxSize": "515kb"
    },
    {
      "path": "./dist/lumeer/main*.js",
      "maxSize": "2860kb"
    },
    {
      "path": "./dist/lumeer/perspectives-chart*.js",
      "maxSize": "1379kb"
    },
    {
      "path": "./dist/lumeer/perspectives-detail*.js",
      "maxSize": "121kb"
    },
    {
      "path": "./dist/lumeer/perspectives-map*.js",
      "maxSize": "479kb"
    },
    {
      "path": "./dist/lumeer/perspectives-search*.js",
      "maxSize": "157kb"
    },
    {
      "path": "./dist/lumeer/polyfills*.js",
      "maxSize": "213kb"
    },
    {
      "path": "./dist/lumeer/runtime*.js",
      "maxSize": "12kb"
    },
    {
      "path": "./dist/lumeer/scripts*.js",
      "maxSize": "192kb"
    },
    {
      "path": "./dist/lumeer/styles*css",
      "maxSize": "350kb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,scss,md}": [
      "npm run format:fix"
    ],
    "**/!(*.spec).ts": [
      "npm run tslint"
    ]
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  }
}
