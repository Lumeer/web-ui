    "@angular-devkit/schematics": "^11.2.5",
    "@angular-eslint/builder": "2.0.2",
    "@angular-eslint/eslint-plugin": "2.0.2",
    "@angular-eslint/eslint-plugin-template": "2.0.2",
    "@angular-eslint/schematics": "2.0.2",
    "@angular-eslint/template-parser": "2.0.2",
    "@angular/cli": "^11.2.5",
    "@angular/compiler-cli": "^11.2.6",
    "@angular/language-service": "^11.2.6",
    "@compodoc/compodoc": "^1.1.11",
    "@ngrx/schematics": "^11.0.1",
    "@sentry/cli": "^1.63.1",
    "@types/auth0-js": "^9.14.2",
    "@types/big.js": "^6.0.2",
    "@types/d3-drag": "^2.0.0",
    "@types/d3-selection": "^2.0.0",
    "@types/d3-zoom": "^2.0.0",
    "@types/geojson": "^7946.0.7",
    "@types/jasmine": "~3.6.6",
    "@types/jasminewd2": "~2.0.8",
    "@types/js-base64": "^3.0.0",
    "@types/jssha": "^2.0.0",
    "@types/mapbox-gl": "^1.12.5",
    "@types/node": "^14.14.34",
    "@types/plotly.js": "^1.54.3",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "angular-http-server": "^1.10.0",
    "bundlesize": "^0.18.1",
    "codelyzer": "^6.0.1",
    "cypress": "^6.8.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "32.3.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-rxjs": "^3.1.2",
    "husky": "^4.3.8",
    "jasmine": "~3.7.0",
    "jasmine-core": "~3.7.1",
    "jasmine-spec-reporter": "~6.0.0",
    "karma": "~6.2.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "lint-staged": "^10.5.4",
    "listr": "^0.14.3",
    "ngx-i18nsupport": "^0.17.1",
    "prettier": "^2.2.1",
    "ts-node": "~9.1.1",
    "typescript": "~4.1.5"
  },
  "bundlesize": [
    {
      "path": "./dist/lumeer/default*.js",
      "maxSize": "515kb"
    },
    {
      "path": "./dist/lumeer/main*.js",
      "maxSize": "2860kb"
    },
    {
      "path": "./dist/lumeer/perspectives-chart*.js",
      "maxSize": "1379kb"
    },
    {
      "path": "./dist/lumeer/perspectives-detail*.js",
      "maxSize": "121kb"
    },
    {
      "path": "./dist/lumeer/perspectives-map*.js",
      "maxSize": "479kb"
    },
    {
      "path": "./dist/lumeer/perspectives-search*.js",
      "maxSize": "157kb"
    },
    {
      "path": "./dist/lumeer/polyfills*.js",
      "maxSize": "213kb"
    },
    {
      "path": "./dist/lumeer/runtime*.js",
      "maxSize": "12kb"
    },
    {
      "path": "./dist/lumeer/scripts*.js",
      "maxSize": "192kb"
    },
    {
      "path": "./dist/lumeer/styles*css",
      "maxSize": "350kb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,scss,md}": [
      "npm run format:fix"
    ],
    "**/!(*.spec).ts": [
      "eslint --fix"
    ]
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  }
}
