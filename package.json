{
  "name": "@lumeer/web-ui",
  "version": "1.0.0",
  "description": "Lumeer Web UI",
  "main": "index.js",
  "scripts": {
    "build": "NODE_OPTIONS=${NODE_OPTIONS:=--max_old_space_size=4096} ng build $(node ./env-vars.js)",
    "bundlesize": "bundlesize",
    "docs": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ../web-ui-docs -n 'Lumeer Web UI documentation'",
    "format:check": "prettier --check '**/*.{ts,js,json,scss,md}'",
    "format:fix": "prettier --write",
    "http-server": "angular-http-server --path ./dist/lumeer -p 7000",
    "i18n": "npm run i18n-html && npm run i18n-ts && npm run i18n-merge",
    "i18n-html": "ng xi18n --output-path i18n",
    "i18n-ts": "ngx-extractor -i \"src/app/**/*.ts\" -f xlf -o src/i18n/messages.xlf",
    "i18n-merge": "xliffmerge --profile xliffmerge.json en cs",
    "lint": "ng lint lumeer",
    "tslint": "tslint --project ./src/tsconfig.app.json",
    "ng": "ng",
    "postinstall": "./prepare-environment.sh",
    "prettier": "prettier",
    "reset-env": "echo {} > ./src/environments/.env.json",
    "start": "npm run reset-env && ng serve",
    "start:aot": "npm run reset-env && ng serve --aot=true",
    "start:cs": "npm run reset-env && ng serve --configuration=cs",
    "start:en": "npm run reset-env && ng serve --configuration=en",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "cypress:open": "npx cypress open",
    "cypress:run": "npx cypress run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lumeer/web-ui.git"
  },
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/Lumeer/web-ui/issues"
  },
  "homepage": "https://github.com/Lumeer/web-ui#readme",
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.10",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "^8.2.10",
    "@angular/compiler": "^8.2.10",
    "@angular/core": "^8.2.10",
    "@angular/forms": "^8.2.10",
    "@angular/platform-browser": "^8.2.10",
    "@angular/platform-browser-dynamic": "^8.2.10",
    "@angular/router": "^8.2.10",
    "@lumeer/lumeer-gantt": "^1.0.17",
    "@ngrx/effects": "^8.4.0",
    "@ngrx/entity": "^8.4.0",
    "@ngrx/router-store": "^8.4.0",
    "@ngrx/store": "^8.4.0",
    "@ngrx/store-devtools": "^8.4.0",
    "@ngx-translate/i18n-polyfill": "^1.0.0",
    "@sentry/browser": "^5.12.1",
    "angular-calendar": "^0.28.2",
    "angular-resizable-element": "^3.2.6",
    "angulartics2": "^8.3.0",
    "auth0-js": "^9.12.1",
    "big.js": "^5.2.2",
    "bootstrap": "^4.4.1",
    "coordinate-parser": "^1.0.3",
    "core-js": "~3.6.4",
    "crc-32": "^1.2.0",
    "driver.js": "^0.9.8",
    "file-saver": "^2.0.2",
    "flag-icon-css": "^3.4.6",
    "hammerjs": "^2.0.8",
    "js-base64": "^2.5.1",
    "jssha": "^2.3.1",
    "lodash": "^4.17.15",
    "mapbox-gl": "^1.7.0",
    "mixpanel-browser": "^2.34.0",
    "moment": "^2.24.0",
    "ng-click-outside": "^6.0.0",
    "ng-snotify": "^4.3.1",
    "ngx-bootstrap": "^5.3.2",
    "ngx-color-picker": "^9.0.0",
    "ngx-contextmenu": "^5.3.0",
    "ngx-device-detector": "^1.3.20",
    "ngx-gravatar": "^8.1.0",
    "ngx-infinite-scroll": "^8.0.1",
    "ngx-quill": "^8.0.0",
    "numbro": "^2.1.2",
    "plotly.js": "^1.52.2",
    "pusher-js": "^5.0.3",
    "quill": "^1.3.7",
    "rxjs": "~6.5.4",
    "smartlook-client": "^4.4.0",
    "unorm": "^1.6.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.20",
    "@angular-devkit/schematics": "^8.3.21",
    "@angular/cli": "^8.3.23",
    "@angular/compiler-cli": "^8.2.10",
    "@angular/language-service": "^8.2.13",
    "@compodoc/compodoc": "^1.1.11",
    "@ngrx/schematics": "^8.5.2",
    "@sentry/cli": "^1.49.0",
    "@types/auth0-js": "^9.12.3",
    "@types/big.js": "^4.0.5",
    "@types/geojson": "^7946.0.7",
    "@types/jasmine": "^3.4.4",
    "@types/jasminewd2": "~2.0.8",
    "@types/js-base64": "^2.3.1",
    "@types/jssha": "^2.0.0",
    "@types/mapbox-gl": "^1.7.0",
    "@types/node": "^12.12.21",
    "@types/plotly.js": "^1.44.21",
    "angular-http-server": "^1.9.0",
    "bundlesize": "^0.18.0",
    "codelyzer": "^5.2.1",
    "cypress": "^3.8.3",
    "husky": "^4.2.1",
    "jasmine": "~3.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.0",
    "karma-jasmine-html-reporter": "^1.5.2",
    "lint-staged": "^10.0.7",
    "listr": "^0.14.3",
    "ngx-i18nsupport": "^0.17.1",
    "prettier": "~1.19.1",
    "rxjs-tslint-rules": "^4.28.3",
    "ts-node": "~8.5.4",
    "tslint": "~5.20.1",
    "typescript": "~3.5.3"
  },
  "bundlesize": [
    {
      "path": "./dist/lumeer/common*.js",
      "maxSize": "10kb"
    },
    {
      "path": "./dist/lumeer/main*.js",
      "maxSize": "5860kb"
    },
    {
      "path": "./dist/lumeer/perspectives-chart*.js",
      "maxSize": "9179kb"
    },
    {
      "path": "./dist/lumeer/perspectives-detail*.js",
      "maxSize": "121kb"
    },
    {
      "path": "./dist/lumeer/perspectives-map*.js",
      "maxSize": "479kb"
    },
    {
      "path": "./dist/lumeer/perspectives-search*.js",
      "maxSize": "157kb"
    },
    {
      "path": "./dist/lumeer/polyfills*.js",
      "maxSize": "213kb"
    },
    {
      "path": "./dist/lumeer/runtime*.js",
      "maxSize": "12kb"
    },
    {
      "path": "./dist/lumeer/scripts*.js",
      "maxSize": "192kb"
    },
    {
      "path": "./dist/lumeer/styles*css",
      "maxSize": "350kb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,scss,md}": [
      "npm run format:fix",
      "git add"
    ],
    "**/!(*.spec).ts": [
      "npm run tslint",
      "git add"
    ]
  }
}
