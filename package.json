    "d3-zoom": "^2.0.0",
    "dompurify": "^2.2.7",
    "driver.js": "^0.9.8",
    "file-saver": "^2.0.5",
    "flag-icon-css": "^3.5.0",
    "hammerjs": "^2.0.8",
    "js-base64": "^3.6.0",
    "jssha": "^3.2.0",
    "lodash": "^4.17.21",
    "mapbox-gl": "^1.13.0",
    "mixpanel-browser": "^2.41.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "ngx-bootstrap": "^6.2.0",
    "ngx-color-picker": "^11.0.0",
    "ngx-device-detector": "^2.0.6",
    "ngx-gravatar": "^10.0.0",
    "ngx-infinite-scroll": "^10.0.1",
