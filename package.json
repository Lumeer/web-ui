{
  "name": "@lumeer/web-ui",
  "version": "1.0.0",
  "description": "Lumeer Web UI",
  "main": "index.js",
  "scripts": {
    "build": "NODE_OPTIONS=${NODE_OPTIONS:=--max_old_space_size=4096} ng build --named-chunks $(node ./env-vars.js)",
    "bundlesize": "bundlesize",
    "docs": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ../web-ui-docs -n 'Lumeer Web UI documentation'",
    "format:check": "prettier --check '**/*.{ts,js,json,scss,md}'",
    "format:fix": "prettier --write",
    "http-server": "angular-http-server --path ./dist/lumeer -p 7000",
    "i18n": "ng extract-i18n --output-path src/i18n --format xlf && npm run i18n-merge",
    "i18n-merge": "xliffmerge --profile xliffmerge.json en cs hu",
    "i18n-old": "npm run i18n-html-old && npm run i18n-ts-old && npm run i18n-merge",
    "i18n-html-old": "ng xi18n --output-path i18n",
    "i18n-ts-old": "ngx-extractor -i \"src/app/**/*.ts\" -f xlf -o src/i18n/messages.xlf",
    "lint": "ng lint lumeer",
    "ng": "ng",
    "postinstall": "./prepare-environment.sh && ngcc",
    "prettier": "prettier",
    "reset-env": "mkdir -p ./src/assets/config && echo {} > ./src/assets/config/config.json",
    "start": "npm run reset-env && ng serve",
    "start:cs": "npm run reset-env && ng serve --configuration=cs",
    "start:hu": "npm run reset-env && ng serve --configuration=hu",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "cypress:open": "npx cypress open",
    "cypress:run": "npx cypress run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lumeer/web-ui.git"
  },
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/Lumeer/web-ui/issues"
  },
  "homepage": "https://github.com/Lumeer/web-ui#readme",
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.2.10",
    "@angular/cdk": "^12.2.9",
    "@angular/cdk-experimental": "^12.2.9",
    "@angular/common": "^12.2.10",
    "@angular/compiler": "^12.2.10",
    "@angular/core": "^12.2.10",
    "@angular/forms": "^12.2.10",
    "@angular/localize": "~12.2.10",
    "@angular/material": "^12.2.9",
    "@angular/platform-browser": "^12.2.10",
    "@angular/platform-browser-dynamic": "^12.2.10",
    "@angular/router": "^12.2.10",
    "@fullcalendar/angular": "^5.10.0",
    "@fullcalendar/core": "^5.10.0",
    "@fullcalendar/daygrid": "^5.10.0",
    "@fullcalendar/interaction": "^5.10.0",
    "@fullcalendar/list": "^5.10.0",
    "@fullcalendar/resource-timegrid": "^5.10.0",
    "@fullcalendar/timegrid": "^5.10.0",
    "@lumeer/data-filters": "^0.6.19",
    "@lumeer/lumeer-gantt": "^1.0.34",
    "@ngrx/effects": "^12.4.0",
    "@ngrx/entity": "^12.4.0",
    "@ngrx/router-store": "^12.4.0",
    "@ngrx/store": "^12.4.0",
    "@ngrx/store-devtools": "^12.4.0",
    "@sentry/browser": "^6.13.3",
    "angular-resizable-element": "^4.0.0",
    "angulartics2": "^10.0.0",
    "auth0-js": "^9.16.4",
    "big.js": "^6.1.1",
    "bootstrap": "^4.6.0",
    "core-js": "~3.18.3",
    "crc-32": "^1.2.0",
    "d3-drag": "^2.0.0",
    "d3-selection": "^2.0.0",
    "d3-time-format": "^3.0.0",
    "d3-zoom": "^2.0.0",
    "dompurify": "^2.3.3",
    "driver.js": "^0.9.8",
    "file-saver": "^2.0.5",
    "flag-icon-css": "^3.5.0",
    "hammerjs": "^2.0.8",
    "js-base64": "^3.7.2",
    "jssha": "^3.2.0",
    "lodash": "^4.17.21",
    "mapbox-gl": "^2.5.1",
    "mixpanel-browser": "^2.41.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "ngx-bootstrap": "^7.1.0",
    "ngx-color-picker": "^11.0.0",
    "ngx-device-detector": "^2.1.1",
    "ngx-gravatar": "^11.0.0",
    "ngx-infinite-scroll": "^10.0.1",
    "ngx-quill": "^14.3.0",
    "ngx-toastr": "^14.1.3",
