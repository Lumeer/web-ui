{
  "name": "@lumeer/web-ui",
  "version": "1.0.0",
  "description": "Lumeer Web UI",
  "main": "index.js",
  "scripts": {
    "build": "NODE_OPTIONS=${NODE_OPTIONS:=--max_old_space_size=4096} ng build --progress=true $(node ./env-vars.js)",
    "bundlesize": "bundlesize",
    "docs": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ../web-ui-docs -n 'Lumeer Web UI documentation'",
    "format:check": "prettier --check '**/*.{ts,js,json,scss,md}'",
    "format:fix": "prettier --write",
    "http-server": "angular-http-server --path ./dist/lumeer -p 7000",
    "i18n": "npm run i18n-html && npm run i18n-ts && npm run i18n-merge",
    "i18n-html": "ng xi18n --output-path i18n",
    "i18n-ts": "ngx-extractor -i \"src/app/**/*.ts\" -f xlf -o src/i18n/messages.xlf",
    "i18n-merge": "xliffmerge --profile xliffmerge.json en cs",
    "lint": "ng lint lumeer",
    "tslint": "tslint --project ./src/tsconfig.app.json",
    "ng": "ng",
    "postinstall": "./prepare-environment.sh",
    "prettier": "prettier",
    "reset-env": "echo {} > ./src/environments/.env.json",
    "start": "npm run reset-env && ng serve",
    "start:aot": "npm run reset-env && ng serve --aot=true",
    "start:cs": "npm run reset-env && ng serve --configuration=cs",
    "start:en": "npm run reset-env && ng serve --configuration=en",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "cypress:open": "npx cypress open",
    "cypress:run": "npx cypress run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lumeer/web-ui.git"
  },
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/Lumeer/web-ui/issues"
  },
  "homepage": "https://github.com/Lumeer/web-ui#readme",
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.13",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "^7.2.13",
    "@angular/compiler": "^7.2.13",
    "@angular/core": "^7.2.13",
    "@angular/forms": "^7.2.13",
    "@angular/http": "^7.2.13",
    "@angular/platform-browser": "^7.2.13",
    "@angular/platform-browser-dynamic": "^7.2.13",
    "@angular/router": "^7.2.13",
    "@lumeer/frappe-gantt-lumeer": "^0.3.0",
    "@ngrx/effects": "^7.4.0",
    "@ngrx/entity": "^7.4.0",
    "@ngrx/router-store": "^7.4.0",
    "@ngrx/store": "^7.4.0",
    "@ngrx/store-devtools": "^7.4.0",
    "@ngx-translate/i18n-polyfill": "^1.0.0",
    "@sentry/browser": "^5.0.8",
    "angular-calendar": "^0.27.3",
    "angular-resizable-element": "^3.2.4",
    "angulartics2": "^7.4.1",
    "auth0-js": "^9.10.1",
    "big.js": "^5.2.2",
    "bootstrap": "^4.3.1",
    "coordinate-parser": "^1.0.2",
    "core-js": "~2.6.5",
    "driver.js": "^0.9.5",
    "flag-icon-css": "^3.3.0",
    "hammerjs": "^2.0.8",
    "intersection-observer": "^0.5.1",
    "jssha": "^2.3.1",
    "leaflet": "^1.4.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "muuri": "^0.7.1",
    "ng-click-outside": "^4.0.0",
    "ng-snotify": "^4.3.1",
    "ngx-bootstrap": "^4.0.1",
    "ngx-color-picker": "^7.5.0",
    "ngx-contextmenu": "^5.1.1",
    "ngx-device-detector": "^1.3.5",
    "ngx-infinite-scroll": "^7.1.0",
    "plotly.js": "^1.47.1",
    "pusher-js": "^4.4.0",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.8",
    "@angular-devkit/schematics": "^7.3.8",
    "@angular/cli": "^7.3.8",
    "@angular/compiler-cli": "^7.2.13",
    "@angular/language-service": "^7.2.13",
    "@compodoc/compodoc": "^1.1.9",
    "@ngrx/schematics": "^7.4.0",
    "@sentry/cli": "^1.41.0",
    "@types/auth0-js": "^9.10.1",
    "@types/big.js": "^4.0.5",
    "@types/jasmine": "^3.3.12",
    "@types/jasminewd2": "~2.0.6",
    "@types/jssha": "^2.0.0",
    "@types/leaflet": "^1.4.3",
    "@types/node": "^11.13.4",
    "@types/plotly.js": "^1.44.3",
    "angular-http-server": "^1.8.1",
    "bundlesize": "^0.17.1",
    "codelyzer": "^5.0.0",
    "cypress": "^3.2.0",
    "husky": "^1.3.1",
    "jasmine": "~3.4.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.5",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lint-staged": "^8.1.5",
    "listr": "^0.14.3",
    "ngx-i18nsupport": "^0.17.1",
    "prettier": "~1.17.0",
    "rxjs-tslint-rules": "^4.20.0",
    "ts-node": "~8.1.0",
    "tslint": "~5.15.0",
    "typescript": "~3.2.4"
  },
  "bundlesize": [
    {
      "path": "./dist/lumeer/common*.js",
      "maxSize": "6160b"
    },
    {
      "path": "./dist/lumeer/main*.js",
      "maxSize": "5860kb"
    },
    {
      "path": "./dist/lumeer/perspectives-chart*.js",
      "maxSize": "9179kb"
    },
    {
      "path": "./dist/lumeer/perspectives-detail*.js",
      "maxSize": "121kb"
    },
    {
      "path": "./dist/lumeer/perspectives-map*.js",
      "maxSize": "479kb"
    },
    {
      "path": "./dist/lumeer/perspectives-search*.js",
      "maxSize": "157kb"
    },
    {
      "path": "./dist/lumeer/polyfills*.js",
      "maxSize": "213kb"
    },
    {
      "path": "./dist/lumeer/runtime*.js",
      "maxSize": "12kb"
    },
    {
      "path": "./dist/lumeer/scripts*.js",
      "maxSize": "192kb"
    },
    {
      "path": "./dist/lumeer/styles*css",
      "maxSize": "350kb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,js,json,scss,md}": [
        "npm run format:fix",
        "git add"
      ],
      "**/!(*.spec).ts": [
        "npm run tslint",
        "git add"
      ]
    }
  }
}
