{
  "extends": ["rxjs-tslint-rules"],
  "rules": {
    "class-name": true,
    "file-header": [true, "Copyright \\(C\\) since 2017 Answer Institute, s\\.r\\.o\\."],
    "forin": true,
    "label-position": true,
    "member-access": true,
    "no-arg": true,
    "no-bitwise": false,
    "no-consecutive-blank-lines": true,
    "no-console": [true, "log", "trace"],
    "no-construct": true,
    "no-debugger": false,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": [
      true,
      {
        "class": true,
        "interface": true
      }
    ],
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-unused-expression": false,
    "no-unused-variable": false,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "prefer-const": true,
    "radix": true,
    "rxjs-no-internal": true,
    "trailing-comma": [
      false,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": [true, "allow-null-check"],
    "variable-name": [true, "ban-keywords", "allow-leading-underscore"],
    "whitespace": [true, "check-decl", "check-operator", "check-type"]
  },
  "linterOptions": {
    "exclude": ["**/node_modules/**"]
  }
}
